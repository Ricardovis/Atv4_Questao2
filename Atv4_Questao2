programa
{
	
	funcao inicio()
	{
		real nota1, nota2, nota3, nota4
		
		escreva("Para uma melhor exatidão na sua média utilize o ponto(.) no lugar da virgula(,) \n ")
		
		escreva("Me informe sua primeira nota: ")
          leia(nota1)
          limpa()
          
          escreva(" Me informe sua segunda nota: ")
		leia(nota2)
		limpa()
		
		
		escreva(" Me informe sua terceira nota: ")
		leia(nota3)
		limpa()
		
		escreva(" Me informe sua quarta nota: ")
		leia(nota4)
		limpa()
		
		
		
		real media = nota1+nota2+nota3+nota4
		
		escreva("\n Sua média foi de: ", media/4, " pontos \n")

		
	}
}
